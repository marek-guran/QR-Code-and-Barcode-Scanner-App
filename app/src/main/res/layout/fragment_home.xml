<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.budiyev.android.codescanner.CodeScannerView
                android:id="@+id/scanner_view"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                app:autoFocusButtonVisible="true"
                app:flashButtonVisible="true"
                app:autoFocusButtonColor="@color/flash"
                app:flashButtonColor="@color/flash"
                app:frameAspectRatioHeight="1"
                app:frameAspectRatioWidth="1"
                app:frameCornersRadius="20dp"
                app:frameCornersSize="40dp"
                app:frameThickness="6dp"
                app:maskColor="@color/QR_scan"
                android:nestedScrollingEnabled="false" />

            <RelativeLayout
                android:id="@+id/history_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:padding="18dp"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:onClick="history_page"
                android:background="@drawable/more_bg_rounded_top"
                android:focusable="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:layout_toStartOf="@+id/end2"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/history"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/history_text"/>
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/end2"
                    android:layout_width="75dp"
                    android:layout_height="55dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/background_rounded_small"
                    android:backgroundTint="@android:color/transparent"
                    >
                    <ImageView
                        android:contentDescription="@string/history_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/history"
                        android:background="@drawable/circle_bg"
                        android:padding="10dp"
                        android:layout_gravity="center"/>
                </FrameLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/qr_generator_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:padding="18dp"
                android:layout_marginTop="2dp"
                android:clickable="true"
                android:onClick="qr_generator"
                android:background="@drawable/more_bg_rounded_middle"
                android:focusable="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/generate_qr_code"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_will_create_for_you_qr_code"/>
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/end4"
                    android:layout_width="75dp"
                    android:layout_height="55dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/background_rounded_small"
                    android:backgroundTint="@android:color/transparent"
                    >
                    <ImageView
                        android:contentDescription="@string/question_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/qr_code"
                        android:background="@drawable/circle_bg"
                        android:padding="10dp"
                        android:layout_gravity="center"/>
                </FrameLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:padding="18dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/more_bg_rounded_bottom">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:layout_toStartOf="@+id/end3"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/change_your_preffered_settings_to_your_desired_options"/>
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/end3"
                    android:layout_width="75dp"
                    android:layout_height="55dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/background_rounded_small"
                    android:backgroundTint="@android:color/transparent"
                    >
                    <ImageView
                        android:contentDescription="@string/question_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/settings"
                        android:background="@drawable/circle_bg"
                        android:padding="10dp"
                        android:layout_gravity="center"/>
                </FrameLayout>
            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>
</layout>